extends layout

block content
  script(src="/javascripts/vue.js")
  #example-2
    button(v-on:click="greet") Greet
  script.
    var example2 = new Vue({
      el: '#example-2',
      data: {
        name: 'Vue.js'
      },
      // 在 `methods` 对象中定义方法
      methods: {
        greet: function (event) {
          // `this` 在方法里指当前 Vue 实例
          alert('Hello ' + this.name + '!')

        }
      }
    })
    // 也可以用 JavaScript 直接调用方法
